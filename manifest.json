{
    "manifest_version": 2,

    "name": "Stream Locker",
	"description": "Load streaming sites videos in the lightweight native HTML5 player and block annoying popups.",
    "version": "0.0.4",
	"author": "Marco Bonelli",
	"minimum_chrome_version": "58.0.3029.81",

    "background": {
		"scripts": [
			"/scripts/my_log.js",
			"/background.js"
		] 
	},
	
	"content_scripts": [
		{
			"matches": [
				"*://openload.co/*",
				"*://oload.tv/*",
				"*://speedvideo.net/*",
				"*://streamin.to/*",
				"*://suspents.info/*",
				"*://turbovid.me/*",
				"*://www.vidgg.to/*",
				"*://wstream.video/*",
				"*://vidabc.com/*",
				"*://vidtome.co/*",
				"*://vidto.me/*",
				"*://thevideo.me/*",
				"*://www.altadefinizione01.eu/*",
				"*://www.fastvideo.me/*",
				"*://www.flashx.to/*",
				"*://www.flashx.tv/*",
				"*://www.nowvideo.ec/*",
				"*://www.nowvideo.li/*",
				"*://www.rapidvideo.com/*",
				"*://www.rapidvideo.cool/*",
				"*://www.rapidvideo.org/*"
			],
			
			"js": ["/scripts/popup_blocker.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	
	"permissions": [
		"tabs",
		"webRequest",
		"<all_urls>"
	],
	
	"icons": {
		"16": "images/icons/16.png",
		"19": "images/icons/19.png",
		"38": "images/icons/38.png",
		"64": "images/icons/64.png",
		"128": "images/icons/128.png"
	}
}
